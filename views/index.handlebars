<h1>Eat-da-burger</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}} 
    {{#if devoured}} 
      {{id}}. {{burger_name}} 
    {{/if}} 
  {{/each}}
</ul>


<form class="create-form">
  <div class="form-group">
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>